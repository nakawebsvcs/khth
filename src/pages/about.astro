---
import BaseLayout from "src/layouts/BaseLayout.astro";
import CTA from "@components/CTA.astro";
import Landing from "@components/Landing.astro";
import FAQ from "@components/FAQ.astro";

// Optimize our landing image and pass it as props to the BaseLayout (for preloading) and Landing (for rendering)
import {getOptimizedImage} from "@js/utils"
import landingImage from "@assets/images/landing.jpg" // <-- THE PATH TO THE ASSET YOU WANT TO PRELOAD - The asset must live in src
const optimizedImage = await getOptimizedImage(landingImage)
---

<BaseLayout
  title="About"
  description="Meta description here"
  preloadedImage={optimizedImage}
>
  <!-- ============================================ -->
  <!--                    LANDING                   -->
  <!-- ============================================ -->

  <Landing title="About Us" image={optimizedImage} />

 <!-- ============================================ -->
<!--                     CTA                      -->
<!-- ============================================ -->

<section id="cta-1072">
    <div class="cs-container">
        <div class="cs-content">
            <div class="cs-flex">
                <h2 class="cs-title">At Kids Hurt Too Hawai'i, we believe that children should not be alone in their grief and trauma. The best way to heal is within a supportive community.</h2>
            </div>
        </div>
    </div>
    <picture class="cs-background">
        <!--Mobile Image-->
        <source media="(max-width: 600px)" src="/assets/images/about-photo.png">
        <!--Tablet and above Image-->
        <source media="(min-width: 601px)" src="/assets/images/about-photo.png">
        <img loading="lazy" decoding="async" src="/assets/images/about-photo.png" alt="about KHTH" width="1280" height="700">
    </picture>
</section>
 
  <!-- ============================================ -->
<!--                   Steps                      -->
<!-- ============================================ -->

<section id="steps-1209">
    <div class="cs-container">
        <div class="cs-content">
            <p class="cs-text"> Since its beginning in 2001, Kids Hurt Too Hawai'i has provided group
          support and training services to thousands of children, youth,
          caregivers, and providers.
            </p>
        </div>
        <ul class="cs-card-group">
            <li class="cs-item">
                <h3 class="cs-h3">MISSION</h3>
                <p class="cs-item-text">
                    To strengthen connections to the community by bringing together children, teens, and their parents impacted by grief and trauma in safe and healing ways.
                </p>
            </li>
            <li class="cs-item">
                <h3 class="cs-h3">VISION</h3>
                <p class="cs-item-text">
                    To restore healthy growth and development in children with grief and trauma, and stabilize families in crisis.
                </p>
            </li>
             <li class="cs-item">
                <h3 class="cs-h3">VALUES</h3>
                <p class="cs-item-text">
                    <strong>EXCELLENCE:</strong> Delivering what we promise and exceeding expectations.<br />
                    <strong>BE REAL:</strong> Honesty and integrity always.<br />
                    <strong>PASSION:</strong> Inspired to care about the individual, organization, and community.<br />
                    <strong>COLLABORATION:</strong> Value everyone and work together for the common good.<br />
                    <strong>DETERMINATION:</strong> Committed to giving our best in everything we do.<br />
                    <strong>RESPECT:</strong> We follow the Golden Rule in everything we do: "Do unto others..."
                </p>
            </li>
        </ul>
         <p class="cs-text"> To learn more and stay in touch with KHTH activities, <a href="https://kidshurttoo.dm.networkforgood.com/forms/join-our-mailing-list" target="_blank" class="cs-link">click here</a> to join our mailing list.
            </p>
    </div>
</section>

<!-- ============================================ -->
<!--                   Video                      -->
<!-- ============================================ -->

<section id="video-571">
    <div class="cs-container">
        <div class="cs-big-link" id="video-container">
            <iframe 
                id="youtube-iframe"
                width="1280" 
                height="580" 
                src="https://www.youtube.com/embed/zepO4rBFGQM?enablejsapi=1" 
                title="Kids Hurt Too Hawaii Video"
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen
                class="cs-background">
            </iframe>
        </div>
        <div class="cs-content">
            <h2 class="cs-video-title">KIDS HURT TOO HAWAI'I PSA</h2>
            <p class="cs-text">
                <em>This PSA was created via 'Ōlelo's PSA Service. This service offers O'ahu's 501(c)3 non-profit organizations, educators, and government agencies a quick and easy way to create simple video messages at no cost. Visit www.olelo.org/psa for more information. </em>
            </p>
        </div>
    </div>
</section>
 
  <!-- ============================================ -->
<!--                  Locations                   -->
<!-- ============================================ -->
<h1 class="cs-h1">Locations</h1>
<section id="locations-1845">
    <div class="cs-container">
        <ul class="cs-card-group">
            <li class="cs-item">
               <span class="pin-icon">⟟</span>
                <h3 class="cs-h3">
                    Honolulu
                </h3>
                <p class="cs-item-text">
                    245 North Kukui Street, Suite 102<br /> Honolulu, HI 96817
                </p>
            </li>
            <li class="cs-item">
                <span class="pin-icon">⟟</span>
                <h3 class="cs-h3">
                    Maui
                </h3>
                <p class="cs-item-text">
                    Maui Address<br /> Wailuku, HI 96732
                </p>
            </li>
        </ul>
    </div>
    <picture class="cs-background">
        <!--Mobile Image-->
        <source media="(max-width: 600px)" srcset="/assets/images/locations-photo.png">
        <!--Tablet and above Image-->
        <source media="(min-width: 601px)" srcset="/assets/images/locations-photo.png">
        <img loading="lazy" decoding="async" src="/assets/images/locations-photo.png" alt="locations" width="1400" height="730">
    </picture>
</section>
  <CTA />
</BaseLayout>

<style lang="less">
  /* PAGE-SPECIFIC STYLES FOR THE ABOUT PAGE */
/*-- -------------------------- -->
<---            CTA             -->
<--- -------------------------- -*/

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
    #cta-1072 {
        padding: var(--sectionPadding);
        background-color: var(--primary);
        position: relative;
        min-height: 50vh;
        z-index: 1;

        .cs-container {
            width: 100%;
            max-width: (1280/16rem);
            margin: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            /* 48px - 64px */
             justify-content: center; /* Centers content vertically */
            min-height: inherit; /* Inherits the height from parent */
            gap: clamp(3rem, 6vw, 4rem);
        }

        .cs-content {
            /* set text align to left if content needs to be left aligned */
            text-align: center;
            width: 100%;
            display: flex;
            flex-direction: column;
            /* centers content horizontally, set to flex-start to left align */
            align-items: center;
            /* 48px - 64px */
            gap: clamp(3rem, 6vw, 4rem);
        }

        .cs-flex {
            max-width: (930/16rem);
        }

        .cs-title {
            margin: 0;

            color: var(--bodyTextColorWhite);
        }

        .cs-background {
            width: 100%;
            height: 100%;
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;

            &:before {
                /* background color overlay */
                content: "";
                position: absolute;
                display: block;
                height: 100%;
                width: 100%;
                background: #101010;
                opacity: 0.50;
                top: 0;
                left: 0;
                z-index: 1;
            }

            img {
                position: absolute;
                top: 0;
                left: 0;
                height: 100%;
                width: 100%;
                /* Makes img tag act as a background image */
                object-fit: cover;
                object-position: center 54%; /* First value: horizontal, Second value: vertical */

            }
        }
    }
}

    /* Mobile - up to 768px */
@media only screen and (max-width: 768px) {
    #cta-1072 .cs-background img {
        object-position: 30% 54%;
    }
}

/* Tablet - 769px to 1024px */
@media only screen and (min-width: 769px) and (max-width: 1024px) {
    #cta-1072 .cs-background img {
        object-position: center 70%;
    }
}

/* Desktop - 1025px and above */
@media only screen and (min-width: 1025px) {
    #cta-1072 .cs-background img {
        object-position: center 54%;
    }
}

/* Large Desktop - 1441px and above */
@media only screen and (min-width: 1441px) {
    #cta-1072 .cs-background img {
        object-position: center 40%;
    }
}


