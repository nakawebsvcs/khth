---
import BaseLayout from "src/layouts/BaseLayout.astro";
import CTA from "@components/CTA.astro";
import Landing from "@components/Landing.astro";
// Optimize our landing image and pass it as props to the BaseLayout (for preloading) and Landing (for rendering)
import {getOptimizedImage} from "@js/utils"
import landingImage from "@assets/images/landing.jpg" // <-- THE PATH TO THE ASSET YOU WANT TO PRELOAD - The asset must live in src
const optimizedImage = await getOptimizedImage(landingImage)
---

<BaseLayout
  title="Volunteer"
  description="Join us in creating a healing environment for grieving and traumatized children and youth."
  preloadedImage={optimizedImage}
>
  <!-- ============================================ -->
  <!--                    LANDING                   -->
  <!-- ============================================ -->

  <Landing title="Volunteer" image={optimizedImage} />

   <section id="page-description">
    <div class="container">
      <h2 class="page-description">Join us in creating a healing environment for grieving and traumatized children and youth.</h2>
    </div>
  </section>

    <!-- ============================================ -->
<!--                  Content                     -->
<!-- ============================================ -->

<section id="content-1450">
    <div class="cs-container">
        <div class="cs-content">
            <!-- <span class="cs-topper">ABOUT US</span>
            <h2 class="cs-title">Stitch Non-profit Charity is the largest global crowdfunding community in the world</h2> -->
            <p class="cs-text">
                Kids Hurt Too Hawai'i is training volunteers to help its efforts to bring solace to children. Volunteers play an essential role in supporting families on their healing journey from their grief and trauma. If you have any questions about volunteer opportunities, please call us or visit the sign-up form below.</p>
            <a href="https://kidshurttoo.dm.networkforgood.com/forms/volunteer-training" target="_blank" class="cs-button-solid">I Want to Help</a>
        </div>
    </div>
</section>

  <!-- ============================================ -->
<!--                    Steps                     -->
<!-- ============================================ -->

<section id="steps-1376" class="volunteer-opportunities">
    <div class="cs-container">
        <div class="cs-content">
            <h2 class="cs-title">Volunteer Opportunities</h2>
        </div>
        <!--
            We had to use a div here because of the grouping we had to do to make the staggerd design work. We needed to create two groups, one with 3 cards and one with 2 cards so we can arrange the cards separately to create the design we need to create. 
        -->
        <div class="cs-card-group">
            <div class="cs-group1">
                <div class="cs-item">
                    <picture class="cs-picture">
                        <img class="cs-icon" loading="lazy" decoding="async"
                            src="/assets/images/heart.svg" alt="heart-icon"
                            width="48" height="48"/>
                    </picture>
                    <!-- <h3 class="cs-h3">Discovery</h3> -->
                    <p class="cs-item-text">
                        Peer Support Groups
                    </p>
                </div>
                <div class="cs-item">
                    <picture class="cs-picture">
                        <img class="cs-icon" loading="lazy" decoding="async"
                            src="/assets/images/heart.svg" alt="heart-icon"
                            width="48" height="48"/>
                    </picture>
                    <!-- <h3 class="cs-h3">Discovery</h3> -->
                    <p class="cs-item-text">
                        Mentoring Group Activities
                    </p>
                </div>
            </div>
            <div class="cs-group2">
                <div class="cs-item">
                   <picture class="cs-picture">
                        <img class="cs-icon" loading="lazy" decoding="async"
                            src="/assets/images/heart.svg" alt="heart-icon"
                            width="48" height="48"/>
                    </picture>
                    <!-- <h3 class="cs-h3">Discovery</h3> -->
                    <p class="cs-item-text">
                        Special Events
                    </p>
                </div>
                <div class="cs-item">
                   <picture class="cs-picture">
                        <img class="cs-icon" loading="lazy" decoding="async"
                            src="/assets/images/heart.svg" alt="heart-icon"
                            width="48" height="48"/>
                    </picture>
                    <!-- <h3 class="cs-h3">Discovery</h3> -->
                    <p class="cs-item-text">
                        Board of Directors
                    </p>
                </div>
            </div>
            <picture class="cs-waves">
                <!--Mobile Image-->
                <source media="(max-width: 1023px)" srcset="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Graphics/wave-tablet.svg">
                <!--Tablet and above Image-->
